{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "lib",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"declaration": true,
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true,
		"allowJs": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"lib",
		"node_modules"
	]
}
